{
  "name": "micro-frontend-spike",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "build:element": "npm run build --configuration production --single-bundle true",
    "build:element:micro-frontend-1": "npm run build:element --project micro-frontend-1",
    "build:element:micro-frontend-2": "npm run build:element --project micro-frontend-2",
    "build:element:micro-frontend-3": "npm run build:element --project micro-frontend-3",
    "build:element:micro-frontend-4": "npm run build:element --project micro-frontend-4",
    "build:elements": "run-p build:element:**",
    "start": "run-p \"start:* --configuration production --single-bundle true\"",
    "build": "ng build",
    "prestart": "ngcc",
    "lint": "ng lint",
    "start:micro-frontend-1": "ng serve --project micro-frontend-1",
    "start:micro-frontend-2": "ng serve --project micro-frontend-2",
    "start:micro-frontend-3": "ng serve --project micro-frontend-3",
    "start:micro-frontend-4": "ng serve --project micro-frontend-4",
    "start:shell": "ng serve --project shell"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.5",
    "@angular/common": "~12.2.5",
    "@angular/compiler": "~12.2.5",
    "@angular/core": "~12.2.5",
    "@angular/forms": "~12.2.5",
    "@angular/platform-browser": "~12.2.5",
    "@angular/platform-browser-dynamic": "~12.2.5",
    "@angular/router": "~12.2.5",
    "document-register-element": "^1.7.2",
    "ng-micro-frontend": "2.0.2",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.5",
    "@angular/cli": "~12.2.5",
    "@angular/compiler-cli": "~12.2.5",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "protractor": "~7.0.0",
    "prettier": "^2.2.1",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5",
    "webpack-manifest-plugin": "^3.0.0"
  }
}